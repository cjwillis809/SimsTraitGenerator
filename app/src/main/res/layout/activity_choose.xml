<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.cj.simstraitgenerator.ChooseActivity">

    <EditText
        android:id="@+id/trait_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="@string/field_hint"
        android:inputType="text"
        android:imeOptions="actionSend"
        android:maxLength="40"
        android:layout_marginBottom="16dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_button"
        android:text="Add"
        android:onClick="addTrait"
        android:layout_toRightOf="@id/trait_field"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/determine_button"
        android:text="Determine"
        android:onClick="determine"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/trait_field"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/winner_view"
        android:layout_below="@id/determine_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trait_view"
        android:layout_below="@id/winner_view"
        android:text="@string/trait_label"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reset_button"
        android:onClick="reset"
        android:text="Reset"
        android:layout_below="@id/trait_view"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
